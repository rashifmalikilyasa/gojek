<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MainSplash">

    <ImageView
        android:id="@+id/gojek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/logo_hitam"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_goneMarginTop="50dp"/>

    <ImageButton
        android:id="@+id/gomart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_gomart"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/gojek"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/goride"
        app:layout_goneMarginTop="30dp"/>

    <ImageButton
        android:id="@+id/goride"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_goride"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/gojek"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/gomart"
        app:layout_goneMarginTop="30dp"/>

    <ImageButton
        android:id="@+id/gofood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_gofood"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/gomart"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/gosend"
        app:layout_goneMarginTop="30dp"/>

    <ImageButton
        android:id="@+id/gosend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_gosend"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/goride"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/gofood"
        app:layout_goneMarginTop="30dp"/>

</android.support.constraint.ConstraintLayout>